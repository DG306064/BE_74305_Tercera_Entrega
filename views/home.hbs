{{!< main}}
<!-- Hero Section -->
<section class="hero-section bg-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-12 col-md-6">
                <h1 class="display-4 fw-bold mb-3">¡Bienvenido a Choice!</h1>
                <p class="lead mb-4">Tu tienda online de confianza donde encontrarás los mejores productos al mejor precio.</p>
                <a href="/api/realTimeProducts" class="btn btn-light btn-lg">
                    <i class="bi bi-cart-plus"></i> Ver Productos
                </a>
            </div>
            <div class="col-12 col-md-6 text-center">
                <div class="hero-image-container">
                    <i class="bi bi-shop display-1 text-white mb-3"></i>
                    <h3 class="text-white">Choice Store</h3>
                    <p class="text-white-50">Tu tienda de confianza</p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Alert Messages -->
{{#if msg}}
    <div class="container mt-4">
        <div class="alert alert-info alert-dismissible fade show" role="alert">
            <i class="bi bi-info-circle"></i> {{msg}}
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    </div>
{{/if}}

<!-- Products Section -->
<section class="products-section py-5">
    <div class="container">
        <div class="row mb-4">
            <div class="col-12">
                <h2 class="text-center mb-4">
                    <i class="bi bi-star"></i> Nuestros Productos Destacados
                </h2>
                <p class="text-center text-muted">Descubre nuestra selección de productos de alta calidad</p>
            </div>
        </div>
        
        <div class="row" id="productsContainer">
            {{#each products}}
                <div class="col-12 col-sm-6 col-lg-4 mb-4">
                    <div class="card h-100 shadow-sm product-card">
                        <div class="card-img-top-container" style="height: 200px; overflow: hidden;">
                            <img src="{{this.thumbnails}}" class="card-img-top" alt="{{this.title}}" 
                                 style="height: 100%; object-fit: cover;"
                                 onerror="this.onerror=null; this.src='data:image/svg+xml;base64,'">
                        </div>
                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">{{this.title}}</h5>
                            <p class="card-text text-muted small">{{this.description}}</p>
                            
                            <div class="mt-auto">
                                <div class="d-flex justify-content-between align-items-center mb-2">
                                    <span class="badge bg-primary fs-6">${{this.price}}</span>
                                    <span class="badge bg-secondary">{{this.stock}} unidades</span>
                                </div>
                                
                                <div class="d-flex justify-content-between align-items-center">
                                    <span class="badge bg-{{#if this.status}}success{{else}}danger{{/if}}">
                                        {{#if this.status}}Disponible{{else}}Agotado{{/if}}
                                    </span>
                                    <small class="text-muted">{{this.category}}</small>
                                </div>
                                
                                <div class="mt-3">
                                    <button class="btn btn-outline-primary btn-sm w-100">
                                        <i class="bi bi-cart-plus"></i> Agregar al Carrito
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {{else}}
                <div class="col-12">
                    <div class="text-center py-5">
                        <i class="bi bi-box-seam display-1 text-muted"></i>
                        <h3 class="mt-3 text-muted">No hay productos disponibles</h3>
                        <p class="text-muted">Pronto tendremos nuevos productos para ti</p>
                        <a href="/realTimeProducts" class="btn btn-primary">
                            <i class="bi bi-plus-circle"></i> Agregar Productos
                        </a>
                    </div>
                </div>
            {{/each}}
        </div>
    </div>
</section>



<script src="/static/js/home.js"></script>